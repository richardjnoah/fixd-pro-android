<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_27_dp"
        android:orientation="vertical">
        <!--Line-->
        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="@dimen/size_10_dp"
            android:layout_marginRight="@dimen/size_10_dp"
            android:background="@color/lb_tv_white"></View>


        <!--Part Details description,part number,qty,part cost-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10_dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtPartDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_27_dp"
                android:layout_marginRight="@dimen/size_27_dp"
                android:background="@drawable/white_rectangle"
                android:hint="@string/partdes"
                android:imeOptions="actionNext"
                android:padding="@dimen/size_10_dp"
                android:singleLine="true"
                android:textColor="@color/lb_tv_white"
                android:textColorHint="@color/lb_tv_white"
                android:textCursorDrawable="@color/lb_tv_white"
                android:textSize="@dimen/size_18_sp" />

            <EditText
                android:id="@+id/txtPartNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_27_dp"
                android:layout_marginRight="@dimen/size_27_dp"
                android:layout_marginTop="@dimen/size_8_dp"
                android:background="@drawable/white_rectangle"
                android:hint="@string/partnum"
                android:imeOptions="actionNext"
                android:padding="@dimen/size_10_dp"
                android:singleLine="true"
                android:textColor="@color/lb_tv_white"
                android:textColorHint="@color/lb_tv_white"
                android:textCursorDrawable="@color/lb_tv_white"
                android:textSize="@dimen/size_18_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8_dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/txtQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_27_dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/white_rectangle"
                    android:hint="@string/qty"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/size_10_dp"
                    android:singleLine="true"
                    android:textColor="@color/lb_tv_white"
                    android:textColorHint="@color/lb_tv_white"
                    android:textCursorDrawable="@color/lb_tv_white"
                    android:textSize="@dimen/size_18_sp" />

                <EditText
                    android:id="@+id/txtCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10_dp"
                    android:layout_marginRight="@dimen/size_27_dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/white_rectangle"
                    android:hint="@string/partcost"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:padding="@dimen/size_10_dp"
                    android:singleLine="true"
                    android:textColor="@color/lb_tv_white"
                    android:textColorHint="@color/lb_tv_white"
                    android:textCursorDrawable="@color/lb_tv_white"
                    android:textSize="@dimen/size_18_sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>