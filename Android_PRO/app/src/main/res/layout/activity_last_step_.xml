<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_14"
            android:src="@drawable/back_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_14"
                android:text="@string/laststep"
                android:textColor="@color/white"
                android:textSize="@dimen/size_23sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_TopInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:padding="@dimen/size_5"
        android:text="@string/pleaseprovideavalid"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12sp" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_TopInstruction"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10"
            android:padding="@dimen/size_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCheckforPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/backgroundchecks2"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/size_17sp" />

            <TextView
                android:id="@+id/txtDoller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="$50.555"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/size_17sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"></View>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/size_20dp"
         android:layout_marginRight="@dimen/size_20dp"
         android:layout_marginTop="@dimen/size_14"
         android:orientation="horizontal">
         <TextView
             android:id="@+id/txtDiscountCode"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1.3"
             android:text="@string/discountcode"
             android:background="@drawable/greay_with_white_solid_ox"
             android:padding="@dimen/size_10"
             android:textColor="@color/color_grey"
             android:textSize="@dimen/size_17sp" />
         <TextView
             android:id="@+id/txtApply"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.7"
             android:text="@string/apply"
             android:background="@drawable/greay_button"
             android:padding="@dimen/size_5"
             android:layout_marginLeft="@dimen/size_14"
             android:gravity="center"
             android:textColor="@color/color_grey"
             android:textSize="@dimen/size_17sp" />
     </LinearLayout>
        <View
            android:layout_marginTop="@dimen/size_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"></View>
        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:padding="@dimen/size_5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/total"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/size_17sp" />
            <TextView
                android:id="@+id/txtTotalDoller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="$100.00"
                android:layout_marginLeft="@dimen/size_14"
                android:gravity="center"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/size_17sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:gravity="left"
                android:hint="@string/cardnumber"
                android:imeOptions="actionNext"
                android:padding="@dimen/size_10"
                android:singleLine="true"
                android:textColor="@color/color_grey"
                android:textColorHint="@color/color_grey"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/size_20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey"></View>

            <EditText
                android:id="@+id/txtExpiration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:gravity="left"
                android:hint="@string/expiration"
                android:imeOptions="actionNext"
                android:padding="@dimen/size_10"
                android:singleLine="true"
                android:textColor="@color/color_grey"
                android:textColorHint="@color/color_grey"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/size_20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey"></View>

            <EditText
                android:id="@+id/txtSecurityCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:gravity="left"
                android:hint="@string/securitycode"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/size_10"
                android:singleLine="true"
                android:textColor="@color/color_grey"
                android:textColorHint="@color/color_grey"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/size_20sp" />

        </LinearLayout>
    </LinearLayout>
    <!--Layout Next-->
    <LinearLayout
        android:id="@+id/layoutFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="@dimen/size_14"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/signup_arrow" />

        <TextView
            android:id="@+id/txtFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/finish"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp" />

        <ImageView
            android:id="@+id/imgScreeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_14"
            android:src="@drawable/next6" />
    </LinearLayout>
</RelativeLayout>