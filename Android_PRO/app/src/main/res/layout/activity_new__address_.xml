<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/cross_new" />

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/addresshint"
            android:textColor="@color/white"
            android:textSize="@dimen/commonlargetxt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/size_57"
        android:layout_marginLeft="@dimen/size_24dp"
        android:layout_marginRight="@dimen/size_24dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/address11"
            android:imeOptions="actionNext"
            android:padding="@dimen/allmargins"
            android:singleLine="true"
            android:textColor="@color/color_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_grey"></View>
        <EditText
            android:id="@+id/txtAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/address22"
            android:imeOptions="actionNext"
            android:padding="@dimen/allmargins"
            android:singleLine="true"
            android:textColor="@color/color_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_grey"></View>
        <EditText
            android:id="@+id/txtZipCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/zip_code11"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:padding="@dimen/allmargins"
            android:singleLine="true"
            android:textColor="@color/color_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_grey"></View>
        <TextView
            android:id="@+id/txtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/city"
            android:imeOptions="actionDone"
            android:padding="@dimen/allmargins"
            android:singleLine="true"
            android:textColor="@color/color_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_grey"></View>
        <TextView
            android:id="@+id/txtState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/state"
            android:imeOptions="actionDone"
            android:padding="@dimen/allmargins"
            android:singleLine="true"
            android:textColor="@color/color_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layout1"
        android:id="@+id/layoutFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/signup_arrow" />

        <TextView
            android:id="@+id/txtFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/finish"
            android:textColor="@color/white"
            android:textSize="@dimen/commonlargetxt" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:src="@drawable/next2" />
    </LinearLayout>
</RelativeLayout>