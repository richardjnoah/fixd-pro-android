<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fixtpro.com.fixtpro.fragment.JobSearchFragment">

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:layout_marginTop="@dimen/left_right_margin"
            android:background="@drawable/serach_box"
            android:drawableLeft="@drawable/search_grey"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textCursorDrawable="@drawable/cursor_drawable"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layoutSearch"
        android:id="@+id/availschedule_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/schedule11">
        <TextView
            android:id="@+id/completed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/scheduled"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/availschedule_layout"
        android:id="@+id/schedulelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="5dp">

        <com.paging.listview.PagingListView
            android:id="@+id/scheduleJob_list_view"
            android:dividerHeight="1dp"
            android:layout_above="@+id/viewall"
            android:divider="@color/register_button_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/viewall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calender"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:text="@string/viewall"
                android:textColor="@color/register_button_text"/>
        </LinearLayout>
    </RelativeLayout>

    <com.paging.listview.PagingListView
        android:id="@+id/completeJob_list_view"
        android:dividerHeight="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/availschedule_layout"
        android:divider="@color/register_button_text"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
