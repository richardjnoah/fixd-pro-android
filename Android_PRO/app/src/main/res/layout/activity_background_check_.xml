<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    tools:context=".activities.BackgroundCheck_Activity">

    <!--Layout Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_14_dp"
            android:src="@drawable/back_arrow" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/imgMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:padding="@dimen/size_14_dp"
            android:src="@drawable/mail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_12_dp"
                android:text="@string/backgroundcheck"
                android:textColor="@color/white"
                android:textSize="@dimen/size_21_sp" />

            <TextView
                android:id="@+id/txtInformationFor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/informationfor"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20_sp" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Test User"
                android:textColor="@color/white"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--Parent Layout Below the Toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/size_5_dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="@dimen/size_20_dp"
            android:layout_marginRight="@dimen/size_20_dp"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtMiddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:gravity="left"
                android:hint="@string/middlename"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:padding="@dimen/size_10_dp"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_grey"
                android:textColorHint="@color/color_grey"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/size_20_sp" />

            <CheckBox
                android:id="@+id/checkMiddleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_20_dp"
                android:text="@string/idonthave"
                android:textColor="@color/color_grey"
                android:buttonTint="@color/orange_signin_back"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey"></View>

            <TextView
                android:id="@+id/txtBirthDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:gravity="left"
                android:hint="@string/birthday"
                android:imeOptions="actionNext"
                android:padding="@dimen/size_10_dp"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_grey"
                android:textColorHint="@color/color_grey"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/size_20_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey"></View>

            <EditText
                android:id="@+id/txtDriverLiecenseNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:gravity="left"
                android:hint="@string/driverliecenseno"
                android:imeOptions="actionNext"

                android:padding="@dimen/size_12_dp"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_grey"
                android:textColorHint="@color/color_grey"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/size_20_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey"></View>

            <TextView
                android:id="@+id/txtDriverLiecenseState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:gravity="left"
                android:hint="@string/driverliecensestate"
                android:imeOptions="actionNext"
                android:padding="@dimen/size_12_dp"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_grey"
                android:textColorHint="@color/color_grey"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/size_20_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey"></View>

            <EditText
                android:id="@+id/txtSocialSecurityNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebox_fill"
                android:drawableLeft="@drawable/social_lock"
                android:drawablePadding="@dimen/size_20_dp"
                android:gravity="left"
                android:inputType="number"
                android:hint="@string/socialsecurityno"
                android:imeOptions="actionDone"
                android:padding="@dimen/size_12_dp"
                android:maxLength="9"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_grey"
                android:textColorHint="@color/color_grey"
                android:textSize="@dimen/size_20_sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="@dimen/size_30_dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/signup_arrow" />

            <TextView
                android:id="@+id/txtNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16_sp" />

            <ImageView
                android:id="@+id/imgScreeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_12_dp"
                android:src="@drawable/next5"
                android:visibility="invisible" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
