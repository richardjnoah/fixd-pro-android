<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    tools:context=".activities.BackgroundCheck_Activity">

    <!--Layout Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:gravity="center"
            android:padding="@dimen/size_14"
            android:src="@drawable/back_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_14"
                android:text="@string/backgroundcheck"
                android:textColor="@color/white"
                android:textSize="@dimen/size_23sp" />

            <TextView
                android:id="@+id/txtYourRightsUnder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/would"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp" />
        </LinearLayout>
    </RelativeLayout>
    <!--Parent Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_70"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/whitebox_fill"
                android:gravity="center"
                android:padding="@dimen/size_14"
                android:text="@string/yes"
                android:textColor="@color/orange_signin_back"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:id="@+id/txtNO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/whitebox_fill"
                android:gravity="center"
                android:padding="@dimen/size_14"
                android:text="@string/no"
                android:textColor="@color/orange_signin_back"
                android:textSize="@dimen/size_16sp" />


        </LinearLayout>

        <!--Bottom Layout-->
        <LinearLayout
            android:id="@+id/layoutNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="@dimen/size_14"
            android:orientation="vertical">


            <ImageView

                android:id="@+id/imgScreeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_70"
                android:src="@drawable/next6" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
