<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    tools:context=".activities.BackgroundCheck_Activity">

    <!--Layout Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/size_57_dp">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5_dp"
            android:gravity="center"
            android:padding="@dimen/size_14_dp"
            android:src="@drawable/back_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_5_dp"
                android:padding="@dimen/size_12_dp"
                android:text="Add Technicians"
                android:textColor="@color/white"
                android:textSize="@dimen/size_21_sp" />

            <TextView
                android:id="@+id/txtYourRightsUnder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/would"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/size_10_dp"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>
    </RelativeLayout>
    <!--Parent Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5_dp"
                android:layout_weight="1"
                android:background="@drawable/whitebox_fill"
                android:gravity="center"
                android:padding="@dimen/size_12_dp"
                android:text="@string/yes"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/size_16_sp" />

            <TextView
                android:id="@+id/txtNO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5_dp"
                android:layout_weight="1"
                android:background="@drawable/whitebox_fill"
                android:gravity="center"
                android:padding="@dimen/size_12_dp"
                android:text="@string/no"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/size_16_sp" />


        </LinearLayout>

        <ListView
            android:id="@+id/lstTechnicians"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200_dp"
            android:layout_marginTop="@dimen/size_48_dp"></ListView>
        <!--Bottom Layout-->
        <LinearLayout
            android:id="@+id/layoutNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="@dimen/size_14_dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgScreeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_70_dp"
                android:src="@drawable/next6"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
