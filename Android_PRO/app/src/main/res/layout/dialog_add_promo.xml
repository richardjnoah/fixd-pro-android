<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_12_dp"
    android:background="@drawable/orange_background">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_27_dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgThumbLuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gift" />

        <TextView
            android:id="@+id/titletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_21_dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Enter a code."
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_20_sp" />

        <EditText
            android:id="@+id/inputPromo"
            android:layout_width="@dimen/size_160_dp"
            android:layout_height="@dimen/size_45_dp"
            android:layout_marginTop="@dimen/size_21_dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#ffffff"
            android:hint="Promo Code"
            android:textColorHint="@color/color_grey"
            android:textColor="@color/text_color_dark_grey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_27_dp"
        android:orientation="vertical"
        android:layout_below="@+id/layout1">

        <TextView
            android:id="@+id/txt_Redeem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redeem!"
            android:gravity="center"
            android:textSize="@dimen/size_22_sp"
            android:textColor="@color/white"
            android:background="@drawable/delete_box"
            android:textColorHint="@color/color_grey" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/size_10_dp"
        android:scaleType="centerCrop"
        android:src="@drawable/screen_cross" />

</RelativeLayout>