<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_12_dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_27_dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgThumbLuck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/thumb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:padding="@dimen/size_8_dp"
                android:singleLine="true"
                android:text="Work Order Approved!"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_18_sp" />  
            <TextView
                android:id="@+id/txtNeed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:padding="@dimen/size_8_dp"
                android:singleLine="true"
                android:text="@string/doyouhave"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_18_sp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8_dp"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/size_8_dp"
                android:paddingRight="@dimen/size_8_dp"
                android:paddingBottom="@dimen/size_27_dp"
                android:text="@string/ifyouhave"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_12_sp" />

        </LinearLayout>
        <!--Complete Job Now...-->
        <LinearLayout
            android:id="@+id/layout_complete_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="@dimen/size_8_dp"
                android:singleLine="true"
                android:text="@string/completejobnow"
                android:textColor="@color/orange_signin_back"
                android:textSize="@dimen/size_20_sp" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:src="@drawable/right_job_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8_dp"></View>
        <!-- resechedule Now...-->
        <LinearLayout
            android:id="@+id/layout_gettingParts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/going_to_get_parts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="@dimen/size_8_dp"
                android:singleLine="true"
                android:text="@string/going_to_get_parts"
                android:textColor="@color/orange_signin_back"
                android:textSize="@dimen/size_20_sp" />

            <ImageView
                android:id="@+id/img_nextgoing_to_get_parts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:src="@drawable/right_job_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8_dp"></View>
        <!-- resechedule Now...-->
        <LinearLayout
            android:id="@+id/layout_reschedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt3resechedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="@dimen/size_8_dp"
                android:singleLine="true"
                android:text="@string/resechedule"
                android:textColor="@color/orange_signin_back"
                android:textSize="@dimen/size_20_sp" />

            <ImageView
                android:id="@+id/img_nextresechedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:src="@drawable/right_job_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8_dp"></View>
        <!--Cancel JOb-->
        <LinearLayout
            android:id="@+id/layout_cancel_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtCancelJOb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="@dimen/size_8_dp"
                android:singleLine="true"
                android:text="@string/canceljob"
                android:textColor="@color/orange_signin_back"
                android:textSize="@dimen/size_20_sp" />

            <ImageView
                android:id="@+id/img_nextCanceljob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:src="@drawable/right_job_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_16_dp"></View>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/size_10_dp"
        android:scaleType="centerCrop"
        android:src="@drawable/screen_cross" />
</RelativeLayout>