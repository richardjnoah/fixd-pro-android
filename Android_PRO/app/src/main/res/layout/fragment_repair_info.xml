<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grey_blur"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginRight="@dimen/left_right_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/picheight"
            android:layout_marginTop="@dimen/commonpadding"
            android:background="@drawable/white_rectangle"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_Camra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/txtTakepic"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_Camra"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="@string/takeapic"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/commonmediumtxt" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginBottom="@dimen/commonpadding"
            android:layout_marginTop="@dimen/commonpadding"
            android:background="@color/lb_tv_white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_UnitManufac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_rectangle"
                android:hint="@string/unitman"
                android:imeOptions="actionNext"
                android:padding="@dimen/commonpadding"
                android:singleLine="false"
                android:textColor="@color/lb_tv_white"
                android:textColorHint="@color/lb_tv_white"
                android:textCursorDrawable="@color/lb_tv_white"
                android:textSize="@dimen/commonmediumtxt" />

            <EditText
                android:id="@+id/editMOdalNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commonpadding"
                android:background="@drawable/white_rectangle"
                android:hint="@string/modalno"
                android:imeOptions="actionNext"
                android:padding="@dimen/commonpadding"
                android:singleLine="false"
                android:textColor="@color/lb_tv_white"
                android:textColorHint="@color/lb_tv_white"
                android:textCursorDrawable="@color/lb_tv_white"
                android:textSize="@dimen/commonmediumtxt" />

            <EditText
                android:id="@+id/editSerialNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commonpadding"
                android:background="@drawable/white_rectangle"
                android:hint="@string/serialno"
                android:imeOptions="actionNext"
                android:padding="@dimen/commonpadding"
                android:singleLine="false"
                android:textColor="@color/lb_tv_white"
                android:textColorHint="@color/lb_tv_white"
                android:textCursorDrawable="@color/lb_tv_white"
                android:textSize="@dimen/commonmediumtxt" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginBottom="@dimen/commonpadding"
            android:layout_marginTop="@dimen/commonpadding"
            android:background="@color/lb_tv_white"></View>

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextheight"
            android:background="@drawable/white_rectangle"
            android:gravity="top"
            android:hint="@string/descriptionofwork"
            android:imeOptions="actionNext"
            android:padding="@dimen/commonpadding"
            android:singleLine="false"
            android:textColor="@color/lb_tv_white"
            android:textColorHint="@color/lb_tv_white"
            android:textCursorDrawable="@color/lb_tv_white"
            android:textSize="@dimen/commonmediumtxt" />
    </LinearLayout>
    </ScrollView>

</LinearLayout>