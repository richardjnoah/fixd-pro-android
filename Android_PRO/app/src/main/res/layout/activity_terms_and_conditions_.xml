<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="fixtpro.com.fixtpro.activities.TermsAndConditions_Activity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/orange_signin_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_14_dp"
            android:src="@drawable/back_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_14_dp"
                android:textColor="@color/white"
                android:textSize="@dimen/size_22_sp" />
        </LinearLayout>
    </RelativeLayout>
    <!--<LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>-->
    <WebView
        android:layout_below="@+id/toolbar"
        android:id="@+id/webviewTermCon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size_10_dp"></WebView>
</RelativeLayout>
