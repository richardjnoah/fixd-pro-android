<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_12_dp"
        android:src="@drawable/back_arrow" />

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAddressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_12_dp"
            android:text="@string/addresshint"
            android:textColor="@color/white"
            android:textSize="@dimen/size_21_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="@dimen/size_24_dp"
        android:layout_marginRight="@dimen/size_24_dp"
        android:layout_marginTop="@dimen/size_57_dp"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/address11"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/size_10_dp"
            android:singleLine="true"
            android:textColor="@color/text_color_dark_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/size_5_dp"
            android:layout_marginRight="@dimen/size_5_dp"
            android:background="@color/color_grey"></View>

        <EditText
            android:id="@+id/txtAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/address22"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/size_10_dp"
            android:singleLine="true"
            android:textColor="@color/text_color_dark_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/size_5_dp"
            android:layout_marginRight="@dimen/size_5_dp"
            android:background="@color/color_grey"></View>

        <EditText
            android:id="@+id/txtZipCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/zip_code11"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:padding="@dimen/size_10_dp"
            android:singleLine="true"
            android:textColor="@color/text_color_dark_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/size_5_dp"
            android:layout_marginRight="@dimen/size_5_dp"
            android:background="@color/color_grey"></View>

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/city"
            android:imeOptions="actionDone"
            android:padding="@dimen/size_10_dp"
            android:singleLine="true"
            android:textColor="@color/text_color_dark_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/size_5_dp"
            android:layout_marginRight="@dimen/size_5_dp"
            android:background="@color/color_grey"></View>

        <TextView
            android:id="@+id/txtState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/state"
            android:imeOptions="actionDone"
            android:padding="@dimen/size_10_dp"
            android:singleLine="true"
            android:textColor="@color/text_color_dark_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20_dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="@dimen/size_40_dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/size_12_dp"
            android:src="@drawable/signup_arrow" />

        <TextView
            android:id="@+id/txtFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16_sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/size_8_dp"
            android:src="@drawable/next2"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>