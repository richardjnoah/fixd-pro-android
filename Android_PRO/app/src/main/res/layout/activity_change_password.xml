<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    tools:context="fixdpro.com.fixdpro.Driver_Info_Activity">

    <RelativeLayout

        android:id="@+id/header_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10_dp"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_18_sp" />

        <TextView
            android:id="@+id/txtDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/size_10_dp"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_18_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/size_10_dp"
            android:text="Change Password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_21_sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_items"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/lblPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_10_dp"
            android:text="858968585"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_18_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/register_button_text" />

        <EditText
            android:id="@+id/txtCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="Current Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/size_14_dp"
            android:textColor="@android:color/white"
            android:textColorHint="#81ffffff"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_18_sp" />

        <EditText
            android:id="@+id/txtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="New Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"

            android:padding="@dimen/size_14_dp"
            android:textColor="@android:color/white"
            android:textColorHint="#81ffffff"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_18_sp" />

        <EditText
            android:id="@+id/txtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="Confirm Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"

            android:padding="@dimen/size_14_dp"
            android:textColor="@android:color/white"
            android:textColorHint="#81ffffff"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_18_sp" />
    </LinearLayout>


</RelativeLayout>
