<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_12_dp"
    android:background="@drawable/orange_background">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_27_dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgThumbLuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/thumb" />

        <TextView
            android:id="@+id/titletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_27_dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Your work is Done here!"
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_20_sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_18_dp"
            android:gravity="center"
            android:padding="@dimen/size_8_dp"
            android:singleLine="true"
            android:text="Robort Allen"
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_20_sp" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/size_5_dp"
            android:singleLine="true"
            android:text="1234-main chandigarh"
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_18_sp" />

        <TextView
            android:id="@+id/txtDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/size_5_dp"
            android:singleLine="true"
            android:text="August 3,2015,"
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_20_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtArrivaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_5_dp"
                android:singleLine="true"
                android:text="Arrival Time:"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_18_sp" />

            <TextView
                android:id="@+id/txtArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_5_dp"
                android:singleLine="true"
                android:text="(null)"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCompletetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_5_dp"
                android:singleLine="true"
                android:text="Completed Time:"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_18_sp" />

            <TextView
                android:id="@+id/txtCompleteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_5_dp"
                android:singleLine="true"
                android:text="(null)"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="@dimen/size_27_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/img_Finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish Job"
            android:gravity="center"
            android:textSize="@dimen/size_22_sp"
            android:textColor="@color/white"
            android:background="@drawable/delete_box" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/size_10_dp"
        android:scaleType="centerCrop"
        android:src="@drawable/screen_cross" />
</RelativeLayout>