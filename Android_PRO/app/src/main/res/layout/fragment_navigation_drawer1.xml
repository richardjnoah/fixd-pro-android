<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_bg_color">

    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_20_dp"
            android:paddingTop="@dimen/size_30_dp"
            android:src="@drawable/menu_fixitpro" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_header_container">

        <LinearLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_25_dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/nav_drawer_listner"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10_dp"
                android:paddingTop="@dimen/size_10_dp">

                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/size_30_dp"
                    android:paddingRight="@dimen/size_25_dp"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/home_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_item_home"
                    android:textColor="@color/drawer_text_color"
                    android:textSize="@dimen/size_16_sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/myjobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_drawer_listner"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10_dp"
                android:paddingTop="@dimen/size_10_dp">

                <ImageView
                    android:id="@+id/myjobs_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/size_30_dp"
                    android:paddingRight="@dimen/size_25_dp"
                    android:src="@drawable/tools" />

                <TextView
                    android:id="@+id/myjobs_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_item_myjobs"
                    android:textColor="@color/drawer_text_color"
                    android:textSize="@dimen/size_16_sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/payments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_drawer_listner"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10_dp"
                android:paddingTop="@dimen/size_10_dp">

                <ImageView
                    android:id="@+id/payments_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/size_30_dp"
                    android:paddingRight="@dimen/size_25_dp"
                    android:src="@drawable/payment" />

                <TextView
                    android:id="@+id/payments_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_item_payments"
                    android:textColor="@color/drawer_text_color"
                    android:textSize="@dimen/size_16_sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nav_drawer_listner"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/size_10_dp"
                    android:paddingTop="@dimen/size_10_dp">

                    <ImageView
                        android:id="@+id/message_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/size_30_dp"
                        android:paddingRight="@dimen/size_25_dp"
                        android:src="@drawable/messages" />

                    <TextView

                        android:id="@+id/message_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/nav_item_message"
                        android:textColor="@color/drawer_text_color"
                        android:textSize="@dimen/size_16_sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtChatNotiCount"
                    android:layout_width="@dimen/size_22_dp"
                    android:layout_height="@dimen/size_22_dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size_12_dp"
                    android:background="@drawable/orange_circle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_13_sp"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/myratings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_drawer_listner"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10_dp"
                android:paddingTop="@dimen/size_10_dp">

                <ImageView
                    android:id="@+id/myratings_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/size_30_dp"
                    android:paddingRight="@dimen/size_25_dp"
                    android:src="@drawable/ratings" />

                <TextView
                    android:id="@+id/myratings_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_item_myratings"
                    android:textColor="@color/drawer_text_color"
                    android:textSize="@dimen/size_16_sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_drawer_listner"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_20_dp"
                android:paddingTop="@dimen/size_10_dp">

                <ImageView
                    android:id="@+id/settings_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/size_30_dp"
                    android:paddingRight="@dimen/size_25_dp"
                    android:src="@drawable/settings" />

                <TextView
                    android:id="@+id/settings_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_item_settings"
                    android:textColor="@color/drawer_text_color"
                    android:textSize="@dimen/size_16_sp" />

            </LinearLayout>


            <View
                android:layout_width="@dimen/size_150_dp"
                android:layout_height="2dp"
                android:background="@color/register_button_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:background="@drawable/nav_drawer_listner"
                    android:paddingBottom="@dimen/size_20_dp"
                    android:paddingTop="@dimen/size_10_dp">

                    <ImageView
                        android:id="@+id/notifications_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/size_30_dp"
                        android:paddingRight="@dimen/size_25_dp"
                        android:src="@drawable/bell" />

                    <TextView
                        android:id="@+id/notifications_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/nav_item_notifications"
                        android:textColor="@color/drawer_text_color"
                        android:textSize="@dimen/size_16_sp" />

                </LinearLayout>

                <TextView

                    android:id="@+id/txtNormalNotiCount"
                    android:layout_width="@dimen/size_22_dp"
                    android:layout_height="@dimen/size_22_dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size_12_dp"
                    android:background="@drawable/orange_circle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_13_sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@drawable/nav_drawer_listner"
                android:paddingBottom="@dimen/size_10_dp"
                android:paddingTop="@dimen/size_10_dp">

                <ImageView
                    android:id="@+id/contactus_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/size_30_dp"
                    android:paddingRight="@dimen/size_25_dp"
                    android:src="@drawable/contect" />

                <TextView
                    android:id="@+id/contactus_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_item_contactus"
                    android:textColor="@color/drawer_text_color"
                    android:textSize="@dimen/size_16_sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10_dp"
                android:paddingTop="@dimen/size_10_dp">

                <ImageView
                    android:id="@+id/logout_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/size_30_dp"
                    android:paddingRight="@dimen/size_25_dp"
                    android:src="@drawable/logout" />

                <TextView
                    android:id="@+id/logout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_item_logout"
                    android:textColor="@color/drawer_text_color"
                    android:textSize="@dimen/size_16_sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
