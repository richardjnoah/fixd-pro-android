<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fixdpro.com.fixdpro.fragment.InstallorRepairFragment">

    <ListView
        android:id="@+id/lstInstallRepair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_finish_job"
        android:layout_alignParentTop="true"></ListView>

    <LinearLayout
        android:id="@+id/layout_finish_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_finishjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_40_dp"
            android:src="@drawable/finish_job" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtWordOrderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Proceed To Work Order"
        android:textColor="@color/white"
        android:padding="@dimen/size_14_dp"
        android:textSize="@dimen/size_22_dp"
        android:background="@color/orange_signin_back"
        android:gravity="center"
        android:visibility="gone"
        />


</RelativeLayout>
