<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/orange_background">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_27_dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/check_wi" />

        <TextView
            android:id="@+id/txtWahoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_27_dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wahoo"
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_22_sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWeWilldeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/size_8_dp"
            android:singleLine="true"
            android:text="@string/wewilldeposit"
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_18_sp" />

        <TextView
            android:id="@+id/txtDoller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/size_5_dp"
            android:singleLine="true"
            android:text="$ 269.10"
            android:textColor="@color/register_button_text"
            android:textSize="@dimen/size_37_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18_dp"
            android:layout_marginRight="@dimen/size_18_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtJobTotal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/size_5_dp"
                android:singleLine="true"
                android:text="@string/jobtotal"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_20_sp" />

            <TextView
                android:id="@+id/txtJobTotalDoller"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/size_5_dp"
                android:singleLine="true"
                android:text="$56.00"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18_dp"
            android:layout_marginRight="@dimen/size_18_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOurFee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/ourfee"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_21_sp" />

            <TextView
                android:id="@+id/txtOurFeeDoller"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="$56.09"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18_dp"
            android:layout_marginRight="@dimen/size_18_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtGovernmentCut"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/govtcut"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_21_sp" />

            <TextView
                android:id="@+id/txtGovernmentCutDoller"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="$3874.00"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_18_dp"
            android:layout_marginRight="@dimen/size_18_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtYourCut"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/yourcut11"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_21_sp" />

            <TextView
                android:id="@+id/txtYourCutDoller"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="$34.00"
                android:textColor="@color/register_button_text"
                android:textSize="@dimen/size_20_sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="@dimen/size_27_dp">
        <ImageView
            android:id="@+id/img_Finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/done"
            android:scaleType="fitXY"/>

    </LinearLayout>

</RelativeLayout>