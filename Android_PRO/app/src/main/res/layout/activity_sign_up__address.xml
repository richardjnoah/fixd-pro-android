<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_signin_back"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/back_arrow" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_14"
                android:text="@string/addresshint"
                android:textColor="@color/white"
                android:textSize="@dimen/size_23sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginRight="@dimen/size_22dp"
        android:layout_marginTop="@dimen/size_30"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/thisisyour"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp" />


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="@dimen/size_30"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_22dp"
            android:layout_marginRight="@dimen/size_22dp"
            android:background="@drawable/whitebox_fill"
            android:gravity="left"
            android:hint="@string/addresshint"
            android:imeOptions="actionNext"
            android:padding="@dimen/size_14"
            android:singleLine="true"
            android:textColor="@color/color_grey"
            android:textColorHint="@color/color_grey"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/size_20sp" />
        <TextView
            android:layout_below="@+id/txtAddress"
            android:id="@+id/txtPowerbygoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/poweredbygoogle"
            android:textColor="@color/white"
            android:padding="5dp"
            android:gravity="right"
            android:layout_marginRight="@dimen/size_22dp"
            android:textSize="@dimen/commonlargetxt" />
        <LinearLayout
            android:id="@+id/layoutNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAddress"
            android:layout_marginTop="@dimen/size_70"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/signup_arrow" />

            <TextView
                android:id="@+id/txtNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp" />

            <ImageView
                android:id="@+id/imgScreeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_30"
                android:src="@drawable/small1" />

        </LinearLayout>

        <ListView
            android:id="@+id/lstPlaces"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/txtAddress"
            android:layout_marginLeft="@dimen/size_22dp"
            android:layout_marginRight="@dimen/size_22dp"
            android:background="@android:color/white"
            android:dividerHeight="0.5dp"
            android:visibility="gone"></ListView>

        <fixtpro.com.fixtpro.views.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/txtAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cpv_animAutostart="true"
            app:cpv_color="@color/orange_signin_back"
            app:cpv_indeterminate="true" />

    </RelativeLayout>
</RelativeLayout>